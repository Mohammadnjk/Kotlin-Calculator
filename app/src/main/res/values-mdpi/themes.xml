<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/input_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="btn_defult_style">
        <item name="android:layout_width">30pt</item>
        <item name="android:layout_height">40pt</item>
        <item name="android:background">@color/btn_number</item>
        <item name="android:layout_margin">1px</item>
        <item name="android:textSize">26dp</item>
        <!--        این ایتم المان های لایه را نسبت به هم تنظیم می کند-->
        <item name="android:layout_weight">1</item>
    </style>
    <!--نحوه رث بری استایل ها -->
    <style name="btn_zero_style" parent="btn_defult_style">
        <item name="android:layout_width">60pt</item>
        <item name="android:layout_weight">2</item>
    </style>
    <style name="btn_height">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background" >@color/btn_number</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="btn_operation" parent="btn_defult_style">
        <item name="android:background">@color/btn_orange</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>